@model List<MiniShare.Models.Product>
@{
    ViewData["Title"] = "购物车";
}
<h2>购物车</h2>
@if (Model.Count == 0)
{
    <div class="alert alert-info">购物车为空</div>
}
else
{
    <ul class="list-group">
    @foreach (var p in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>@p.Name</span>
            <span>￥@p.Price.ToString("F2")</span>
        </li>
    }
    </ul>
    <form asp-action="Checkout" method="post" class="mt-3">
        <button class="btn btn-primary">下单</button>
        <a class="btn btn-secondary" asp-action="Index">继续购物</a>
    </form>
}