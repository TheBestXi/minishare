@model List<MiniShare.Models.Post>
@{	ViewData["Title"] = "我的帖子";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">我的帖子</h2>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-newspaper fa-5x mb-3 text-muted"></i>
            <h5>暂无帖子</h5>
            <p class="text-muted">快去发布你的第一条帖子吧！</p>
            <a href="/Posts/Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>发布帖子
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var post in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border rounded-3 overflow-hidden">
                        <!-- 帖子图片 -->
                        <div class="post-image-container" style="height: 250px; overflow: hidden;">
                            @if (ViewBag.PostMainImages != null && ViewBag.PostMainImages.ContainsKey(post.Id))
                            {
                                <img src="@ViewBag.PostMainImages[post.Id]" 
                                     alt="@post.Title" 
                                     class="w-100 h-100 object-fit-cover" 
                                     style="transition: transform 0.3s ease;" 
                                     onmouseover="this.style.transform='scale(1.05)'" 
                                     onmouseout="this.style.transform='scale(1)'">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light w-100 h-100">
                                    <i class="fas fa-newspaper fa-5x text-muted"></i>
                                </div>
                            }
                        </div>
                        <!-- 帖子信息 -->
                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-2">
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none text-dark">@post.Title</a>
                            </h5>
                            <div class="text-muted small mb-3">
                                @(post.Content?.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content ?? "暂无内容")
                            </div>
                            <div class="d-flex justify-content-between align-items-center text-muted small">
                                <span>
                                    <i class="far fa-calendar-alt me-1"></i>
                                    @post.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")
                                </span>
                                <div class="d-flex gap-3">
                                    <span>
                                        <i class="far fa-heart me-1"></i>
                                        @post.LikeCount
                                    </span>
                                    <span>
                                        <i class="far fa-comment me-1"></i>
                                        @post.Comments.Count
                                    </span>
                                </div>
                            </div>
                            <!-- 操作按钮 -->
                            <div class="mt-3">
                                <a asp-controller="UserPosts" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-primary w-100">
                                    <i class="fas fa-edit me-1"></i>编辑帖子
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- 分页控件 -->
        <div class="mt-5 d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.Page - 1)&pageSize=@ViewBag.PageSize" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= Math.Ceiling((double)ViewBag.Total / ViewBag.PageSize); i++)
                    {
                        <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                            <a class="page-link" href="?page=@i&pageSize=@ViewBag.PageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.Page >= Math.Ceiling((double)ViewBag.Total / ViewBag.PageSize) ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.Page + 1)&pageSize=@ViewBag.PageSize" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .post-image-container {
        overflow: hidden;
    }
    
    .post-image-container img {
        transition: transform 0.3s ease;
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
</style>