@model MiniShare.Controllers.ChangePasswordViewModel
@{	ViewData["Title"] = "修改密码";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">修改密码</h2>
    
    <div class="card shadow-sm border-0 rounded-3 overflow-hidden mb-4" style="max-width: 600px;">
        <div class="card-body p-4">
            <form asp-controller="UserManagement" asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                
                <div class="mb-4">
                    <p class="text-muted">请为用户设置新密码，密码长度至少为6个字符。</p>
                </div>
                
                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">新密码</label>
                    <input asp-for="NewPassword" type="password" class="form-control" required />
                    <div class="invalid-feedback">
                        密码必须至少包含6个字符。
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">确认新密码</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                    <div class="invalid-feedback">
                        两次输入的密码不匹配。
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="d-flex justify-content-end gap-3">
                    <a asp-controller="UserManagement" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>取消
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-key me-1"></i>更新密码
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 表单验证
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}