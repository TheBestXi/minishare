@model List<MiniShare.Models.Product>
@{
    ViewData["Title"] = "商品管理";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">商品管理</h2>
    <div>
        <a class="btn btn-outline-secondary me-2" asp-action="ProductRequests">
            <i class="fas fa-inbox me-1"></i>查看商品申请
        </a>
        <a class="btn btn-primary" asp-action="CreateProduct">
            <i class="fas fa-plus me-1"></i>新增商品
        </a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>名称</th>
            <th>价格</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>￥@p.Price</td>
            <td>
                <form asp-action="DeleteProduct" method="post">
                    <input type="hidden" name="id" value="@p.Id" />
                    <button class="btn btn-danger btn-sm">删除</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>