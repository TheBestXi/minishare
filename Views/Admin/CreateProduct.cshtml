@model MiniShare.Models.Product
@{
    ViewData["Title"] = "新增商品";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0 h4">
                        <i class="fas fa-plus me-2"></i>新增商品
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="CreateProduct" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>商品名称
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="请输入商品名称" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-yen-sign me-1"></i>商品价格
                                </label>
                                <input asp-for="Price" class="form-control form-control-lg" placeholder="0.00" step="0.01" min="0" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>商品描述
                            </label>
                            <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="请输入商品描述（可选）"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Products" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>返回列表
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-save me-2"></i>保存商品
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}