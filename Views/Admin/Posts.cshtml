@model List<MiniShare.Models.Post>
@{
    ViewData["Title"] = "帖子管理";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-newspaper me-2"></i>帖子管理
        </h2>
    </div>
    
    <div class="card shadow-sm border-0 rounded-3 overflow-hidden mb-4">
        <div class="card-body p-4">
            <div class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchTerm" placeholder="搜索标题、内容或作者..." value="@ViewData["SearchTerm"]">
                        <button class="btn btn-primary" id="searchBtn">
                            <i class="fas fa-search me-1"></i>搜索
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <form id="searchForm" method="get" asp-controller="Admin" asp-action="Posts">
        <input type="hidden" id="formSearchTerm" name="searchTerm" value="@ViewData["SearchTerm"]">
        <input type="hidden" id="formSortBy" name="sortBy" value="@ViewData["SortBy"]">
        <input type="hidden" id="formSortOrder" name="sortOrder" value="@ViewData["SortOrder"]">
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center" style="width: 60px;">#</th>
                        <th class="sortable" data-sort="title">
                            标题
                            @if (ViewData["SortBy"].ToString() == "title")
                            {
                                <i class="fas fa-sort-@(ViewData["SortOrder"].ToString() == "asc" ? "up" : "down") ms-1"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort ms-1 text-muted"></i>
                            }
                        </th>
                        <th class="sortable" data-sort="author">
                            作者
                            @if (ViewData["SortBy"].ToString() == "author")
                            {
                                <i class="fas fa-sort-@(ViewData["SortOrder"].ToString() == "asc" ? "up" : "down") ms-1"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort ms-1 text-muted"></i>
                            }
                        </th>
                        <th class="text-center sortable" data-sort="likes">
                            点赞数
                            @if (ViewData["SortBy"].ToString() == "likes")
                            {
                                <i class="fas fa-sort-@(ViewData["SortOrder"].ToString() == "asc" ? "up" : "down") ms-1"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort ms-1 text-muted"></i>
                            }
                        </th>
                        <th class="text-center sortable" data-sort="comments">
                            评论数
                            @if (ViewData["SortBy"].ToString() == "comments")
                            {
                                <i class="fas fa-sort-@(ViewData["SortOrder"].ToString() == "asc" ? "up" : "down") ms-1"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort ms-1 text-muted"></i>
                            }
                        </th>
                        <th class="text-center sortable" data-sort="createdAt">
                            发布时间
                            @if (ViewData["SortBy"].ToString() == "createdAt")
                            {
                                <i class="fas fa-sort-@(ViewData["SortOrder"].ToString() == "asc" ? "up" : "down") ms-1"></i>
                            }
                            else
                            {
                                <i class="fas fa-sort ms-1 text-muted"></i>
                            }
                        </th>
                        <th class="text-end" style="width: 120px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var p = Model[i];
                        <tr>
                            <td class="text-center fw-bold">@(i + 1)</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fas fa-newspaper text-secondary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-truncate" style="max-width: 300px;">@p.Title</div>
                                        @if (!string.IsNullOrEmpty(p.Content))
                                        {
                                            <small class="text-muted text-truncate d-block" style="max-width: 300px;">@p.Content</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(p.Author?.AvatarUrl))
                                    {
                                        <img src="@p.Author.AvatarUrl" alt="头像" class="rounded-circle me-2" style="width: 35px; height: 35px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-bold">@(p.Author?.UserName ?? "未知用户")</div>
                                        <small class="text-muted">@p.Author?.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-heart me-1"></i>@p.LikeCount
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-comment me-1"></i>@p.Comments.Count
                                </span>
                            </td>
                            <td class="text-center text-muted">
                                @p.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                            </td>
                            <td class="text-end">
                                <form asp-action="DeletePost" method="post" class="d-inline" onsubmit="return confirm('确定要删除这个帖子吗？');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i class="fas fa-trash me-1"></i>删除
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-newspaper fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">暂无帖子</h4>
                <p class="text-muted">当前还没有任何帖子内容。</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // 文档加载完成后执行
        $(document).ready(function () {
            // 搜索按钮点击事件
            $('#searchBtn').click(function () {
                performSearch();
            });
            
            // 回车键触发搜索
            $('#searchTerm').keypress(function (e) {
                if (e.which === 13) { // Enter key
                    performSearch();
                }
            });
            
            // 排序表头点击事件
            $('.sortable').click(function () {
                var sortBy = $(this).data('sort');
                var currentSortBy = $('#formSortBy').val();
                var currentSortOrder = $('#formSortOrder').val();
                
                // 如果点击的是当前排序列，则切换排序方向
                if (sortBy === currentSortBy) {
                    currentSortOrder = currentSortOrder === 'asc' ? 'desc' : 'asc';
                } else {
                    // 否则默认升序
                    currentSortOrder = 'asc';
                }
                
                // 更新表单并提交
                $('#formSortBy').val(sortBy);
                $('#formSortOrder').val(currentSortOrder);
                $('#searchForm').submit();
            });
            
            // 表格行悬停效果
            $('table tbody tr').hover(
                function () {
                    $(this).addClass('table-active');
                },
                function () {
                    $(this).removeClass('table-active');
                }
            );
        });
        
        // 执行搜索
        function performSearch() {
            var searchTerm = $('#searchTerm').val();
            $('#formSearchTerm').val(searchTerm);
            $('#formSortBy').val('createdAt'); // 重置排序
            $('#formSortOrder').val('desc');
            $('#searchForm').submit();
        }
    </script>
}