@model IEnumerable<MiniShare.Models.ProductRequest>
@{
    ViewData["Title"] = "商品申请管理";
    string GetStatusBadge(MiniShare.Models.ProductRequestStatus status) => status switch
    {
        MiniShare.Models.ProductRequestStatus.Pending => "bg-warning text-dark",
        MiniShare.Models.ProductRequestStatus.Approved => "bg-success",
        MiniShare.Models.ProductRequestStatus.Rejected => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>商品申请管理</h2>
        <a asp-action="Products" class="btn btn-outline-secondary">
            <i class="fas fa-list me-2"></i>返回商品列表
        </a>
    </div>

    @if (TempData["RequestMessage"] != null)
    {
        <div class="alert alert-info">
            @TempData["RequestMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>名称</th>
                    <th>价格</th>
                    <th>申请人</th>
                    <th>状态</th>
                    <th>提交时间</th>
                    <th>审核信息</th>
                    <th class="text-end">操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var req in Model)
                    {
                        <tr>
                            <td>@req.Name</td>
                            <td>￥@req.Price</td>
                            <td>@(req.RequestedBy?.UserName ?? req.RequestedBy?.Email ?? "未知")</td>
                            <td>
                                <span class="badge @GetStatusBadge(req.Status)">
                                    @(req.Status switch
                                    {
                                        MiniShare.Models.ProductRequestStatus.Pending => "待审核",
                                        MiniShare.Models.ProductRequestStatus.Approved => "已通过",
                                        MiniShare.Models.ProductRequestStatus.Rejected => "已驳回",
                                        _ => "未知"
                                    })
                                </span>
                            </td>
                            <td>@req.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                @if (req.Status == MiniShare.Models.ProductRequestStatus.Pending)
                                {
                                    <span class="text-muted">等待审核</span>
                                }
                                else
                                {
                                    <div>审核人：@(req.ReviewedBy?.UserName ?? req.ReviewedBy?.Email ?? "未知")</div>
                                    <div>时间：@req.ReviewedAt?.ToString("yyyy-MM-dd HH:mm")</div>
                                    @if (!string.IsNullOrWhiteSpace(req.ReviewComment))
                                    {
                                        <div>备注：@req.ReviewComment</div>
                                    }
                                }
                            </td>
                            <td class="text-end">
                                @if (req.Status == MiniShare.Models.ProductRequestStatus.Pending)
                                {
                                    <form asp-action="ApproveRequest" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@req.Id" />
                                        <button type="submit" class="btn btn-success btn-sm me-2">
                                            <i class="fas fa-check me-1"></i>通过
                                        </button>
                                    </form>
                                    <form asp-action="RejectRequest" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@req.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-times me-1"></i>驳回
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">已处理</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            暂无商品申请
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

