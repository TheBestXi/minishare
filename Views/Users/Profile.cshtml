@model MiniShare.Models.ApplicationUser
@{
    ViewData["Title"] = "个人资料";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0 h4">
                        <i class="fas fa-user me-2"></i>个人资料
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">昵称</label>
                            <input name="displayName" value="@Model.DisplayName" class="form-control form-control-lg" placeholder="请输入您的昵称" />
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">头像 URL（可选）</label>
                            <input name="avatarUrl" value="@Model.AvatarUrl" class="form-control form-control-lg" placeholder="请输入头像图片链接" />
                            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                            {
                                <div class="mt-2">
                                    <img src="@Model.AvatarUrl" alt="当前头像" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                                </div>
                            }
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">注册邮箱</label>
                            <input type="email" value="@Model.Email" class="form-control form-control-lg" disabled />
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">注册时间</label>
                            <input type="text" value="@Model.CreatedAt.ToLocalTime().ToString("yyyy年MM月dd日 HH:mm")" class="form-control form-control-lg" disabled />
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="btn btn-outline-secondary btn-lg px-4" href="/">
                                <i class="fas fa-home me-2"></i>返回首页
                            </a>
                            <button class="btn btn-primary btn-lg px-4" type="submit">
                                <i class="fas fa-save me-2"></i>保存修改
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>