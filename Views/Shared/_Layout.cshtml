@using Microsoft.EntityFrameworkCore
@inject MiniShare.Services.ICartService CartService
@inject MiniShare.Data.ApplicationDbContext _context
@{ 
    var currentUser = User.Identity.IsAuthenticated ? await UserManager.GetUserAsync(User) : null;
            var displayName = currentUser?.UserName ?? User.Identity.Name ?? "用户";
            var avatarUrl = currentUser?.AvatarUrl;
            var cartCount = CartService.GetCartCount();
            int pendingRequestCount = 0;
            if (User.IsInRole("Admin"))
            {
                pendingRequestCount = await _context.ProductRequests.CountAsync(r => r.Status == MiniShare.Models.ProductRequestStatus.Pending);
            }
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniShare</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiniShare.styles.css" asp-append-version="true" />
</head>
<body class="@(User.Identity.IsAuthenticated ? "authenticated" : "")">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-share-alt me-2"></i>MiniShare
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>首页
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">
                                <i class="fas fa-newspaper me-1"></i>帖子
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-shopping-bag me-1"></i>商品
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-area="" asp-controller="Products" asp-action="Cart">
                                <i class="fas fa-shopping-cart me-1"></i>购物车
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count">
                                    @cartCount
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Collections" asp-action="Index">
                                <i class="fas fa-heart me-1"></i>我的收藏
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="MyOrders">
                                <i class="fas fa-receipt me-1"></i>我的订单
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index">
                                <i class="fas fa-user me-1"></i>个人主页
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (!string.IsNullOrEmpty(avatarUrl))
                                    {
                                        <img src="@avatarUrl" alt="头像" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle me-2"></i>
                                    }
                                    <span>@displayName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="UserProfile" asp-action="Index"><i class="fas fa-user me-2"></i>我的资料</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li class="dropdown-submenu">
                                            <a class="dropdown-item dropdown-toggle position-relative" href="#">
                                                <i class="fas fa-cog me-2"></i>后台管理
                                                @if (pendingRequestCount > 0)
                                                {
                                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                        @pendingRequestCount
                                                    </span>
                                                }
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Products"><i class="fas fa-shopping-bag me-2"></i>商品管理</a></li>
                                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Posts"><i class="fas fa-newspaper me-2"></i>帖子管理</a></li>
                                                <li><a class="dropdown-item" asp-controller="UserManagementExtensions" asp-action="Index"><i class="fas fa-users-cog me-2"></i>用户管理</a></li>
                                            </ul>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline w-100">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item" style="border: none; background: none; cursor: pointer; width: 100%; text-align: left;">
                                                <i class="fas fa-sign-out-alt me-2"></i>退出登录
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>账户
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/Login"><i class="fas fa-sign-in-alt me-2"></i>登录</a></li>
                                    <li><a class="dropdown-item" href="/Identity/Account/Register"><i class="fas fa-user-plus me-2"></i>注册</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="main-content">
        <main role="main" class="container py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-share-alt me-2"></i>MiniShare</h5>
                    <p>一个分享产品和文章的平台，让创意和知识自由流动。</p>
                </div>
                <div class="col-md-3">
                    <h5>快速链接</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="text-light">首页</a></li>
                        <li><a asp-area="" asp-controller="Posts" asp-action="Index" class="text-light">帖子</a></li>
                        <li><a asp-area="" asp-controller="Products" asp-action="Index" class="text-light">商品</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>关于我们</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">隐私政策</a></li>
                        <li><a href="#" class="text-light">联系我们</a></li>
                        <li><a href="#" class="text-light">帮助中心</a></li>
                    </ul>
                </div>
            </div>
            <hr class="bg-light">
            <div class="text-center">
                &copy; 2025 - MiniShare - 保留所有权利
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>