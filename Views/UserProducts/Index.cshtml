@model List<MiniShare.Models.Product>
@{	ViewData["Title"] = "我的商品";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">我的商品</h2>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-shopping-bag fa-5x mb-3 text-muted"></i>
            <h5>暂无商品</h5>
            <p class="text-muted">快去发布你的第一件商品吧！</p>
            <a href="/Products/Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>发布商品
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border rounded-3 overflow-hidden">
                        <!-- 商品图片 -->
                        <div class="product-image-container" style="height: 250px; overflow: hidden;">
                            @if (ViewBag.ProductMainImages != null && ViewBag.ProductMainImages.ContainsKey(product.Id))
                            {
                                <img src="@ViewBag.ProductMainImages[product.Id]" 
                                     alt="@product.Name" 
                                     class="w-100 h-100 object-fit-cover" 
                                     style="transition: transform 0.3s ease;" 
                                     onmouseover="this.style.transform='scale(1.05)'" 
                                     onmouseout="this.style.transform='scale(1)'">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light w-100 h-100">
                                    <i class="fas fa-shopping-bag fa-5x text-muted"></i>
                                </div>
                            }
                        </div>
                        <!-- 商品信息 -->
                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-2">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">@product.Name</a>
                            </h5>
                            <div class="h5 text-danger fw-bold mb-3">￥@product.Price.ToString("F2")</div>
                            <div class="text-muted small mb-3">
                                @(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description ?? "暂无描述")
                            </div>
                            <div class="d-flex justify-content-between align-items-center text-muted small">
                                <span>
                                    <i class="far fa-calendar-alt me-1"></i>
                                    @product.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")
                                </span>
                                <span>
                                    <i class="fas fa-truck me-1"></i>
                                    @GetShippingMethodText(product.ShippingMethod)
                                </span>
                            </div>
                            <!-- 操作按钮 -->
                            <div class="mt-3">
                                <a asp-controller="UserProducts" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary w-100">
                                    <i class="fas fa-edit me-1"></i>编辑商品
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- 分页控件 -->
        <div class="mt-5 d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.Page - 1)&pageSize=@ViewBag.PageSize" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= Math.Ceiling((double)ViewBag.Total / ViewBag.PageSize); i++)
                    {
                        <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                            <a class="page-link" href="?page=@i&pageSize=@ViewBag.PageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.Page >= Math.Ceiling((double)ViewBag.Total / ViewBag.PageSize) ? "disabled" : "")">
                        <a class="page-link" href="?page=@(ViewBag.Page + 1)&pageSize=@ViewBag.PageSize" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .product-image-container {
        overflow: hidden;
    }
    
    .product-image-container img {
        transition: transform 0.3s ease;
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
</style>

@functions {
    // 获取配送方式文本
    string GetShippingMethodText(MiniShare.Models.ShippingMethod method)
    {
        switch (method)
        {
            case MiniShare.Models.ShippingMethod.Express:
                return "快递配送";
            case MiniShare.Models.ShippingMethod.Meetup:
                return "面交";
            default:
                return "未知";
        }
    }
}